{
  "name": "shapla-css",
  "description": "Apply helper classes to almost any element, in order to alter their style.",
  "version": "2.0.0",
  "contributors": [
    {
      "name": "Sayful Islam",
      "email": "sayful.islam001@gmail.com",
      "url": "https://sayfulislam.com"
    }
  ],
  "keywords": [
    "shapla-css",
    "css-utility"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sayful1/shapla-css.git"
  },
  "bugs": {
    "url": "https://github.com/sayful1/shapla-css/issues"
  },
  "main": "dist/shapla.css",
  "unpkg": "dist/shapla.css",
  "module": "src/shapla.scss",
  "files": [
    "dist/*",
    "example/*",
    "src/*",
    "*.json",
    "*.js"
  ],
  "scripts": {
    "dev": "webpack --mode=development --progress --watch",
    "dev-build": "webpack --mode=development",
    "build": "webpack --mode=production",
    "build:lib": "webpack --mode=production"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "autoprefixer": "^10.1.0",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.0.1",
    "file-loader": "^6.2.0",
    "mini-css-extract-plugin": "^1.3.3",
    "mini-svg-data-uri": "^1.2.3",
    "node-sass": "^5.0.0",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "postcss-combine-media-query": "^1.0.1",
    "postcss-loader": "^4.1.0",
    "sass-loader": "^10.1.0",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^5.0.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.11.1",
    "webpack-clean": "^1.2.5",
    "webpack-cli": "^4.3.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
